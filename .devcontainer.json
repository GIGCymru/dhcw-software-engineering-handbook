// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
    "name": "DHCW Software Engineering Handbook Dev Container",
    "image": "mcr.microsoft.com/devcontainers/python:3.13-bookworm",
    "features": {
        "ghcr.io/va-h/devcontainers-features/uv:1": {},
        "ghcr.io/guiyomh/features/just:0": {},
        "ghcr.io/devcontainers/features/docker-in-docker:2": {}
    },
    
    // Use 'forwardPorts' to make a list of ports inside the container available locally.
    "forwardPorts": [8000],
    
    // Use 'postCreateCommand' to run commands after the container is created.
    "postCreateCommand": "bash -i -c 'nvm install --lts && npm install markdownlint-cli2 cspell-cli && just sync'",

    // Configure tool-specific properties.
    "customizations": {
        "vscode": {
            "extensions": [
                "DavidAnson.vscode-markdownlint",
                "streetsidesoftware.code-spell-checker",
                "bierner.markdown-mermaid",
                "redhat.vscode-yaml",
                "tamasfe.even-better-toml",
                "nefrob.vscode-just"
            ],
            "settings": {
                "editor.rulers": [80, 120] // Add a vertical ruler at the 80 and 120 characters
            }
        }
    }
}